<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
     <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDown</item>
       <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
        
    
                   <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/pumpkin</item>
        <item name="android:popupBackground">@color/carrot</item>
       <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>
    
    <style name="DropDown" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyDropDownNav" parent="android:style/Widget.Holo.Light.Spinner">    
    <item name="android:textColor">@color/white</item>
 <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
  <item name="android:popupBackground">@color/carrot</item>
</style>
    
<style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">#FFFFFF</item>
    
</style>


    
</resources>
